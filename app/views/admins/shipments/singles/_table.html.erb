<%= form_tag shipment_details_admins_shipments_singles_path, method: "get" do %>
  <table class="table c-table">
    <thead>
      <tr>
        <th>注文日</th>
        <th>注文番号</th>
        <th>発送状況</th>
        <th>商品名</th>
        <th>購入者</th>
        <th><%= submit_tag "詳細", class: 'btn btn-primary' %></th>
      </tr>
    </thead>
    <tbody>
      <% shipments and shipments.each do |shipment| %>
        <% detail = shipment.single_line_item.single_order_detail %>
        <% payment = detail.payment %>
        <tr>
          <td><%= detail.completed_on %></td>
          <td><%= payment.number %></td>
          <td><%= t("shipment.state.#{shipment.state}") %></td>
          <td><%= shipment.single_line_item.variant.name %></td>
          <td><%= payment.user.profile.try(:name) %></td>
          <td>
          <%= check_box_tag 'shipment[ids][]', shipment.id, false, {:class => 'shipment_check_box', :id => "shipment_#{shipment.id}"} %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>