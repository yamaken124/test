<div class="content-header">
  <h3>
    <%= link_to '発送管理', admins_shipments_path %> / <%= @shipment.payment.number %>
    <div class="u-float_right">
      <%= form_tag admins_shipment_path(@shipment), method: "patch", class: "u-float_left" do %>
        <% if @shipment.state != "shipped" %>
          <%= hidden_field_tag :state, "shipped" %>
          <%= submit_tag "発送完了", class: "btn btn-primary", data: { confirm: "本当に実行しますか？" } %>
        <% else %>
          <%= hidden_field_tag :state, "ready" %>
          <%= submit_tag "発送準備に戻す", class: "btn btn-primary", data: { confirm: "本当に実行しますか？" } %>
        <% end %>
      <% end %>
      <%= form_tag admins_shipment_path(@shipment), class: "u-float_left u-margin__left20" do %>
        <%= submit_tag "キャンセル", class: "btn btn-warning", data: { confirm: "本当に実行しますか？" } %>
      <% end %>
    </div>
  </h3>
</div>

<section class="content">
  <div class="content col-md-9">
    <h4 class="box-title">お届先情報</h4>
    <table class="table c-table">
      <thead>
        <tr>
          <th>名前</th>
          <th><%= @address.name %></th>
        </tr>
        <tr>
          <th>郵便番号</th>
          <th><%= @address.zipcode %></th>
        </tr>
        <tr>
          <th>都道府県</th>
          <th><%= @address.city %></th>
        </tr>
        <tr>
          <th>住所</th>
          <th><%= @address.address %></th>
        </tr>
        <tr>
          <th>電話番号</th>
          <th><%= @address.phone %></th>
        </tr>
      </thead>
    </table>
  </div>

  <div class="content col-md-9">
    <h4 class="box-title">購入商品</h4>
    <table class="table c-table">
      <thead>
        <tr>
          <th>名前</th>
          <th>画像</th>
          <th>値段</th>
          <th>個数</th>
          <th>合計</th>
        </tr>
        <% @single_line_items.each do |single_line_item| %>
          <tr>
            <td><%= single_line_item.variant.sku %></td>
            <td><%= image_tag single_line_item.variant.images.first.try(:image).try(:url), class: "thumb" %></td>
            <td><%= single_line_item.price %></td>
            <td><%= single_line_item.quantity %></td>
            <td><%= single_line_item.quantity * single_line_item.price %>円</td>
          </tr>
        <% end %>
      </thead>
    </table>
  </div>

  <div class="content col-md-9">
    <h4 class="box-title">サマリ</h4>
    <table class="table c-table">
      <thead>
        <tr>
          <th colspan="2">配送情報</th>
        </tr>
        <tr>
          <th>配送状況</th>
          <th><%= @shipment.state %></th>
        </tr>
        <tr>
          <th colspan="2">支払い情報</th>
        </tr>
        <tr>
          <th>支払い</th>
          <th><%= @shipment.payment.state %></th>
        </tr>
        <tr>
          <th>配送料</th>
          <th><%= @single_order_detail.shipment_total %>円</th>
        </tr>
        <tr>
          <th>税金</th>
          <th><%= @single_order_detail.additional_tax_total %>円</th>
        </tr>
        <tr>
          <th>使用ポイント</th>
          <th><%= @single_order_detail.used_point %>Pt</th>
        </tr>
        <tr>
          <th>合計金額</th>
          <th><%= @shipment.payment.amount %></th>
        </tr>
        <tr>
          <th colspan="2">購入者情報</th>
        </tr>
        <tr>
          <th>名前</th>
          <th><%= @purchase_user.name %></th>
        </tr>
        <tr>
          <th>電話番号</th>
          <th><%= @purchase_user.email %></th>
        </tr>
        <tr>
          <th>Email</th>
          <th><%= @purchase_user.email %></th>
        </tr>
      </thead>
    </table>
  </div>
</section>
