<% payment = @detail.payment %>
<% profile = @user.profile %>
<section class="content">

  <div class="content col-md-9">
    <h4 class="box-title">お客様情報</h4>
    <table class="table c-table">
      <thead>
        <tr>
          <th>名前</th>
          <th><%= @user.profile.try(:name) %></th>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <th><%= @user.email %></th>
        </tr>
      </thead>
    </table>
  </div>
  <div class="content col-md-9">
    <h4 class="box-title">お届け先情報</h4>
    <table class="table c-table">
      <thead>
        <tr>
          <th>名前</th>
          <th><%= payment.address.try(:name) %></th>
        </tr>
        <tr>
          <th>郵便番号</th>
          <th><%= payment.address.zipcode %></th>
        </tr>
        <tr>
          <th>都道府県</th>
          <th><%= payment.address.city %></th>
        </tr>
        <tr>
          <th>住所</th>
          <th><%= payment.address.address %></th>
        </tr>
        <tr>
          <th>電話番号</th>
          <th><%= payment.address.phone %></th>
        </tr>
      </thead>
    </table>
  </div>
  <div class="content col-md-9">
    <h4 class="box-title">お支払い情報</h4>
    <table class="table c-table">
      <thead>
        <tr>
          <th>支払い時間</th>
          <th><%= payment.created_at.strftime("%Y/%m/%d %H:%M") %></th>
        </tr>
        <tr>
          <th>注文番号</th>
          <th><%= payment.number %></th>
        </tr>
        <tr>
          <th>ステータス</th>
          <th><%= t("payment.state.#{payment.state}") %></th>
        </tr>
        <tr>
          <th>支払い方法</th>
          <th><%= payment.payment_method.name %></th>
        </tr>
      </thead>
    </table>
  </div>
  <div class="content col-md-9">
    <h4 class="box-title">ご注文情報</h4>
    <table class="table c-table">
      <thead>
        <tr>
          <th>総額</th>
          <th><%= number_to_jpy(@detail.total) %></th>
        </tr>
        <tr>
          <th>実支払額</th>
          <th><%= number_to_jpy(@detail.paid_total) %></th>
        </tr>
        <tr>
          <th>送料</th>
          <th><%= number_to_jpy(@detail.shipment_total) %></th>
        </tr>
        <tr>
          <th>税額</th>
          <th><%= number_to_jpy(@detail.included_tax_total) %></th>
        </tr>
        <tr>
          <th>小計</th>
          <th><%= number_to_jpy(@detail.item_total) %></th>
        </tr>
        <tr>
          <th>使用マイル</th>
          <th><%= @detail.used_point %></th>
        </tr>
      </thead>
    </table>
  </div>
  <div class="content col-md-9">
    <h4 class="box-title">ご購入商品情報</h4>
    <% @detail.single_line_items.each do |item| %>
      <table class="table c-table">
        <thead>
          <tr>
            <th>商品名</th>
            <th><%= item.variant.name %></th>
          </tr>
          <tr>
            <th>数量</th>
            <th><%= item.quantity %></th>
          </tr>
          <tr>
            <th>金額</th>
            <th><%= number_to_jpy(item.price) %></th>
          </tr>
        <% end %>
      </thead>
    </table>
  </div>

</section>
