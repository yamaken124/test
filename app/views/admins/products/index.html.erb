<div class = "content-header">
  <h3>
    商品管理
    <div class="u-float_right">
      <a href="<%= new_admins_product_path %>" class="btn btn-primary">商品追加</a>
    </div>
  </h3>
</div>
<section class="content">
<h4 class="box-title">検索</h4>
<h4 class="box-title">注文リスト</h4>
<div class = "content">
  <% if !@products.blank? %>
    <table class = "table">
      <thead>
        <tr>
          <th>ID</th>
          <th>名前</th>
          <th>説明</th>
          <th>状態</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @products.each do |product| %>
          <tr>
            <td><%= product.id %></td>
            <td><a href="<%= edit_admins_product_path(id: product.id) %>"><%= product.name %></a></td>
            <td><%= product.description %></td>
            <td>
              <%# if product.is_valid_at >= Date.today.beginning_of_day %>
              <% if( !product.is_valid_at.blank? && !product.is_invalid_at.blank? ) %>
                <% if(product.is_valid_at <= Time.now && product.is_invalid_at >= Time.now) %>
                  <%= t('product_situation.valid') %>
                <% elsif(product.is_valid_at > Time.now)  %>
                  <%= t('product_situation.preparing') %>
                <% else %>
                  <%= t('product_situation.expired') %>
                <% end %>
              <% else %>
                不明
              <% end %>
            </td>
            <td>
              <a href="<%= edit_admins_product_path(id: product.id) %>" class="btn btn-success btn-sm"><i class="fa fa-edit"></i></a>
                <a href="<%= admins_product_path(id: product.id) %>" class="btn btn-danger btn-sm" data-method="delete"><i class="fa  fa-trash"></i></a>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <p>現在商品は登録されていません</p>
      <% end %>
    </div>
    </section>
