<p>Product#index</p>

<p><a href="<%= new_admins_product_path %>">商品登録</a></p>

<% if !@products.blank? %>
  <table>
    <thead>
      <tr>
        <th>id</th>
        <th>名前</th>
        <th>説明</th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.id %></td>
          <td><a href="<%= edit_admins_product_path(id: product.id) %>"><%= product.name %></a></td>
          <td><%= product.description %></td>
          <td><a href="<%= edit_admins_product_path(id: product.id) %>"><%= "product#edit" %></td>
          <td><a href="<%= admins_product_path(id: product.id) %>"data-method="delete"><%= "product#delete" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>現在商品は登録されていません</p>
<% end %>