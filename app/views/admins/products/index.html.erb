<div class="content-header">
  <h3>
    商品管理
    <div class="u-float_right">
      <a href="<%= new_admins_product_path %>" class="btn btn-primary">商品追加</a>
    </div>
  </h3>
</div>
<section class="content">
  <h4 class="box-title">商品一覧</h4>
  <div class="content">
    <% if @products.present? %>
      <table class="table">
        <thead>
          <tr>
            <th>ID</th>
            <th>名前</th>
            <th>この商品について</th>
            <th>カテゴリ</th>
            <th>順序変更</th>
            <th>表示順</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @products.each do |product| %>
            <tr>
              <td><%= product.id %></td>
              <td><a href="<%= admins_product_path(id: product.id) %>"><%= product.name %></a></td>
              <td><%= product.product_description.try(:description) %></td>
              <td>
                <% product.taxons.each.with_index(1) do |products_taxon, i| %>
                  <% if i <= 3 %>
                    <%= products_taxon.name %>/
                  <% else %>
                    ...(<%=product.products_taxons.count%>)
                    <% break %>
                  <% end %>
                <% end %>
              </td>
              <td>
              <% unless Product.first.id == product.position %>
                <%= link_to( "上へ", admins_product_move_position_path(product_id: product.id, position: "up"), method: :post) %>
              <% end %>
              <% unless Product.last.id == product.position %>
                <%= link_to( "下へ", admins_product_move_position_path(product_id: product.id, position: "down"), method: :post) %>
              <% end %>
            </td>
            <td>
              <%= product.position %>
            </td>
            <td>
              <td>
                <a href="<%= admins_product_variants_path(product_id: product.id)%>"><button class="btn btn-info">SKU一覧</button></a>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p>現在商品は登録されていません</p>
    <% end %>
  </div>
</section>
