<%= form_for([:admins, product]) do |p| %>

  <div class="field">
    <%= p.label :name %><br>
    <%= p.text_field :name, class: "text" %>
  </div>
  <div class="field">
    <%= p.label :description %><br>
    <%= p.text_field :description, class: "text" %>
  </div>
  <div class="field">
    <%= p.label :product_is_valid_at %><br>
    <%= p.date_field :is_valid_at, value: Date.today %><br/>
  </div>
  <div class="field">
    <%= p.label :product_is_invalid_at %><br>
    <%= p.date_field :is_invalid_at, value: Date.today %><br/>
  </div>

  <%= p.fields_for :variants do |v| %>
    <div class="field">
      <%= v.label :sku %><br>
      <%= v.text_field :sku, class: "text" %>
    </div>
    <div class="field">
      <%= v.label :variant_is_valid_at %><br>
      <%= v.date_field :is_valid_at, value: Date.today %><br/>
    </div>
    <div class="field">
      <%= v.label :variant_is_invalid_at %><br>
      <%= v.date_field :is_invalid_at, value: Date.today %><br/>
    </div>
    <div class="field">
      <%= v.select :order_type, {t('attributes.order_type.single_order') => "single_order", t('attributes.order_type.subscription_order') => "subscription_order"} %>
    </div>

  <% end %>

  <%= p.fields_for :prices do |pri| %>
    <div class="field">
      <%= pri.label :amount %><br>
      <%= pri.text_field :amount, class: "text" %>
    </div>
  <% end %>

  <div class="actions">
    <%= p.submit "登録", class: "submit" %>
  </div>

<% end %>