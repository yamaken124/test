<%= form_for([:admins, product]) do |p| %>
  <section class="content">
  <div class="box-body col-md-6">
    <div class="form-group">
      <%= p.label :name %><br>
      <%= p.text_field :name, class: "form-control", placeholder: "Enter name" %>
    </div>
    <div class="form-group">
      <%= p.label :description %><br>
      <%= p.text_field :description, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= p.label :product_is_valid_at %><br>
      <%= p.date_select :is_valid_at,{},{:class=>"form-control"} %>
    </div>
    <div class="field">
      <%= p.label :product_is_invalid_at %><br>
      <p><%= p.date_select :is_invalid_at,{},{:class=>"form-control"} %></p>
    </div>
    <div class="actions">
      <%= p.submit "登録", class: "btn" %>
    </div>
  </div>

<% end %>
</section>
