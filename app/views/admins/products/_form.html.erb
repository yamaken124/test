<%= form_for([:admins, product]) do |p| %>

  <div class="field">
    <%= p.label :name %><br>
    <%= p.text_field :name, class: "text" %>
  </div>
  <div class="field">
    <%= p.label :description %><br>
    <%= p.text_field :description, class: "text" %>
  </div>
  <div class="field">
    <%= p.label :product_is_valid_at %><br>
    <%= p.date_field :is_valid_at %><br/>
  </div>
  <div class="field">
    <%= p.label :product_is_invalid_at %><br>
    <%= p.date_field :is_invalid_at %><br/>
  </div>
  <div class="actions">
    <%= p.submit "登録", class: "submit" %>
  </div>

<% end %>