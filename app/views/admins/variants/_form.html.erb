<%= form_for([:admins, variant.product, variant]) do |v| %>
  <section class="content">
  <div class="box-body col-md-6">
    <%= v.hidden_field :sku, :value => "all" %>
      <div class="form-group">
        <p><%= v.label :name %></p>
        <%= v.text_field :name, placeholder: variant.product.name, class: "form-control" %>
      </div>
      <div class="form-group">
        <p><%= v.label :is_valid_at %></p>
        <%if params[:action]=="new" %>
          <%= v.datetime_local_field :is_valid_at, value: Date.today%><br/>
        <% else %>
          <%= v.datetime_local_field :is_valid_at %><br/>
        <% end %>
      </div>
      <div class="form-group">
        <p><%= v.label :is_invalid_at %></p>
        <%if params[:action]=="new" %>
          <p><%= v.datetime_local_field :is_invalid_at, value: Date.today+6*30 %></p>
        <% else %>
          <p><%= v.datetime_local_field :is_invalid_at %></p>
        <% end %>
      </div>
      <%= v.fields_for :price, @variant.price || Price.new do |p| %>
        <div class="form-group">
          <p><%= p.label :amount %></p>
          <p><%= p.text_field :amount, class: "form-control", value: variant.price.try(:amount) %></p>
        </div>
      <% end %>
      <%= v.fields_for :upper_used_point_limit, @variant.upper_used_point_limit || UpperUsedPointLimit.new do |u| %>
        <div class="form-group">
          <p><%= u.label :limit %></p>
          <p><%= u.text_field :limit, class: "form-control", value: variant.upper_used_point_limit.try(:limit) %></p>
        </div>
      <% end %>
      <div class="form-group">
        <p><%= v.label :stock_quantity %></p>
        <%= v.text_field :stock_quantity, class: "form-control" %>
      </div>
      <div class="form-group">
        <p>
          <%= v.select :order_type,{t('order_type.single_order') => "single_order", t('order_type.subscription_order') => "subscription_order"},{},{:class=>"form-control"} %>
        </p>
      </div>
      <div class="actions">
        <%= v.submit "登録", class: "btn" %>
      </div>
    </div>
    </section>
<% end %>
