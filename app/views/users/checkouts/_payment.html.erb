<%= form_for(checkout_state_path(state: :payment), method: :patch) do |payment_form| %>
<%#= form_tag(checkout_state_path(state: :payment), :method => :patch) do %>

<%= item_form.number_field :quantity, min: 0 %>

  <div class="p-wrapper--have_padding">
    <h2 class="title">カート小計(<%=@order.single_order_detail.item_count%>個の商品): <span>￥<%=@order.single_order_detail.item_total%></span></h2>
    <div class="c-btn--submit u-margin__bottom_middle">
      <%= payment_form.submit "購入確認画面へ", class: 'c-btn--submit' %>
    </div>
  <h2 class="c-links__title">お届先住所</h2>
  <ul class="c-links">
    <a href="<%= account_addresses_path %>">
      <li class="c-link--small_text">
        <span>
          <% if @address.present? %>
          <%#= payment_form.text_field :name, class: "form-control", placeholder: "Enter name" %>
            <%= @address.pluck(:address).first %>
          <% else %>
            <%= link_to "新規住所登録", new_account_address_path %>
          <% end %>
        </span>
      </li>
    </a>
  </ul>
  <h2 class="c-links__title">支払い方法</h2>
  <ul class="c-links">
    <a href="<%= products_path %>">
      <li class="c-link--small_text">
        <span>
          支払い方法<br>
          クレジット 下4桁 8080
        </span>
      </li>
    </a>
  </ul>
  <h2 class="c-links__title">ポイント使用</h2>
  <ul class="p-payment_method_selections">
    <li class="p-payment_method_selection">
      <div class="p-payment_method_selection__radio">
        <input type="radio" name="select">
      </div>
      <p class="p-payment_method_selection__title">
        全て使用
      </p>
      <p class="p-payment_method_selection__price">
        9999Pt
      </p>
    </li>
    <li class="p-payment_method_selection">
      <div class="p-payment_method_selection__radio">
        <input type="radio" name="select">
      </div>
      <p class="p-payment_method_selection__title">
        一部を使用
      </p>
      <div class="p-payment_method__detail is-active">
        <p>ポイント: </p>
        <input type="text" class="p-payment_method__amount">
        <p class="u-margin_short">Pt</p>
      </div>
    </li>
  </ul>
  <h2 class="c-links__title">購入詳細</h2>

  <% 1.times do %>
    <div class="c-payment_method_section">
      購入形式: <%= t('order_type.single_order') %>
    </div>
    <% @order.single_order_detail.single_line_items.each do |single_line_item| %>
      <div class="c-product_list">
        <div class="c-product_list__image">
          <%= image_tag "users/sample_item_01.png" %>
        </div>
        <div class="c-product__list_detail_wrapper">
          <div class="c-product_list__title">
            サプリメント
          </div>
          <div class="c-product_list__price">
            ￥<%= single_line_item.price %>(<%= single_line_item.quantity %>個)
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
  <div class="c-btn--submit">
    <%= payment_form.submit "購入確認画面へ", class: 'c-btn--submit' %>
  </div>
</div>


<% end %>