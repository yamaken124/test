<%= form_tag(checkout_state_path(state: :confirm), :method => :patch) do %>

  <div class="p-wrapper--have_padding">
    <h2 class="title">注文確定</h2>
    <div class="u-margin__bottom_middle">
      <%= submit_tag "注文の確定", class: 'c-btn--submit', :onclick=> "prevent_double_submit(event)" %>
    </div>
    <h2 class="c-links__title">注文内容</h2>
    <ul class="p-payment_method_selections">
      <li class="p-payment_method_selection">
        <span>
        商品: <%= number_to_jpy(@detail.item_total_with_tax) %><br>
        配送料手数料: <%= number_to_jpy(@detail.shipment_total) %>
        </span>
      </li>
      <li class="p-payment_method_selection">
        <span>
          使用マイル:<%= @payment.used_point %>pt<br>
          注文合計: <%= number_to_jpy(@payment.amount) %>
        </span>
      </li>
    </ul>

    <h2 class="c-links__title">お届け先住所</h2>
    <ul class="p-payment_method_selections">
      <li class="p-payment_method_selection">
        <span>
          <%= @address.last_name %>&nbsp;<%= @address.first_name %><br>
          <%= @address.zipcode %>&nbsp;<%= @address.city %>&nbsp;<%= @address.address %><br>
        </span>
      </li>
    </ul>

    <h2 class="c-links__title">支払い方法</h2>
    <ul class="p-payment_method_selections">
      <li class="p-payment_method_selection">
        <span>
          <%= @gmo_card[:CardNo] %>
        </span>
      </li>
    </ul>

    <h2 class="c-links__title">購入詳細</h2>
    <% if false #TODO %>
      <div class="c-payment_method_section">
        購入形式: <%= t('order_type.single_order') %>
      </div>
    <% end %>
    <% @items.each do |item| %>
      <div class="c-product_list">
        <div class="c-product_list__image">
          <%= image_tag item.images.first.image.url %>
        </div>
        <div class="c-product__list_detail_wrapper">
          <div class="c-product_list__title">
            <%= item.name %>
          </div>
          <div class="c-product_list__price">
            <%= number_to_jpy(item.price.amount * @tax_rate) %>(<%= @single_line_items.where(variant_id: item.id).first.quantity %>個)
          </div>
        </div>
      </div>
    <% end %>
    <div class="c-btn--submit">
      <%= submit_tag "注文の確定", class: 'c-btn--submit', :onclick=> "prevent_double_submit(event)" %>
    </div>
  </div>

<% end %>
