<%= form_tag(checkout_state_path(state: :confirm), :method => :patch) do %>
<% single_order_detail = @order.single_order_detail %>
<% #TODO 変更 %>
<% address_id = 3 %>
<% haisou = 20 %><%#@order.bill.shippment %>
<% item_with_tax = single_order_detail.item_total + single_order_detail.additional_tax_total %>
<%# asna %>
<% credit_id =single_order_detail.payment.source_id %>

<div class="p-wrapper--have_padding">
  <h2 class="title">注文確定</h2>
	<div class="c-btn--submit u-margin__bottom_middle">
	  注文の確定
  </div>
  <h2 class="c-links__title">注文内容</h2>
  <ul class="p-payment_method_selections">
    <li class="p-payment_method_selection">
      <span>
      商品: ¥<%= item_with_tax %>円<br>
      配送料手数料: ¥<%= single_order_detail.shipment_total %>円
      </span>
    </li>
    <li class="p-payment_method_selection">
      <span>
        使用ポイント:<%= @used_point %>pt<br>
        注文合計: ¥<%= single_order_detail.total %>円
      </span>
    </li>
  </ul>
  <h2 class="c-links__title">お届け先住所</h2>
  <ul class="p-payment_method_selections">
    <li class="p-payment_method_selection">
      <span>
				<%= @address.last_name %><br>
				<%= @address.address %>
			</span>
    </li>
  </ul>
  <h2 class="c-links__title">支払い方法</h2>
  <ul class="p-payment_method_selections">
    <li class="p-payment_method_selection">
      <span>
        支払い方法<br>クレジット 下4桁
				<%= @gmo_cards[credit_id][:CardNo]  %>
      </span>
    </li>
  </ul>
  <h2 class="c-links__title">購入詳細</h2>


      <% @items.each do |single_line_item| %>
        <div class="c-product_list">
          <div class="c-product_list__image">
            <%= image_tag single_line_item.variant.images.first.image.url %>
          </div>
          <div class="c-product__list_detail_wrapper">
            <div class="c-product_list__title">
              <%= single_line_item.variant.product.name %>
            </div>
            <div class="c-product_list__price">
              ￥<%= single_line_item.price %>(<%= single_line_item.quantity %>個)
            </div>
          </div>
        </div>
      <% end %>
<div class="c-btn--submit">
    注文の確定
  </div>
</div>

<% end %>
