<a href="<%= product_path(id: product.id) %>">
  <div class="c-product">

    <%= image_tag @images_indexed_by_variant_id[@variants_indexed_by_product_id[product.id].id].image.url, class: "c-product__image" %>

    <div class="c-product__left_wrapper">
      <div class="c-product__title">
        <%= product.name %>
      </div>
      <div class="c-product__price">
        <%if(@single_prices[@variants_indexed_by_product_id[product.id].id].present?) %>
          <% if(@subscription_prices[@variants_indexed_by_product_id[product.id].id].present?) %>
            <p class="c-product__price_title"><%=t('order_type.single_order')%></p>
          <% end %>
          <p class="c-product__price_value">
            <%= @single_prices[@variants_indexed_by_product_id[product.id].id].amount %>円
          </p>
        <% end %>
      </div>
      <div class="c-product__price">
        <%if(@subscription_prices[@variants_indexed_by_product_id[product.id].id].present?) %>
          <% if(@subscription_prices[@variants_indexed_by_product_id[product.id].id].present?) %>
            <p class="c-product__price_title"><%=t('order_type.subscription_order')%></p>
          <% end %>
          <p class="c-product__price_value">
            <%= @single_prices[@variants_indexed_by_product_id[product.id].id].amount %>円
          </p>
        <% end %>
      </div>
    </div>
    <div class="c-product__right_wrapper">
    </div>
  </div>
</a>