<div class="c-segments">
  <p class="is--active">通常購入</p>
  <div class="border"></div>
  <p>定期購入</p>
</div>
<% @details.each do |detail| %>
  <div class="c-order_title">
    <p class="order_day">注文日:<br><%= detail.completed_on %></p>
    <p class="amount">合計:<br><%= number_to_jpy(detail.paid_total) %></p>
    <p class="address">お届け先:<br><%= "#{detail.address.full_address}" %></p>
  </div>
  <% detail.single_line_items.each do |item|%>
    <% variant = @variants_indexed_by_id[item.variant_id] %>
    <div class="c-product_list">
    	<div class="c-product_list__image">
        <%= image_tag variant.images.first.image.url %>
      </div>
      <div class="c-product__list_detail_wrapper">
    	  <div class="c-product_list__title">
          <%= variant.name %>
    	  </div>
    	  <div class="c-product_list__price">
          <%= number_to_jpy(variant.price.amount * @tax_rate) %>
          (<%=item.quantity%>)
        </div>
      </div>
    </div>
    <div class="p-wrapper--have_padding">
      <% if @returned_item_indexed_by_item_id && @returned_item_indexed_by_item_id[item.id].present? %>
        <ul class="c-links">
          <li class="c-link--nolink">
            返品リクエストを受け付けました。
          </li>
        </ul>
      <% elsif detail.payment.shipment.try(:shipped?) %>
        <ul class="c-links">
          <a href="#">
            <li class="c-link--small_text--nolink">
              <span>発送を完了しました<br>発送日:2014/12/25</span>
            </li>
          </a>
          <a href="<%= orders_item_send_back_confirmation_path(item.id) %>">
            <li class="c-link">
              商品を返品
            </li>
          </a>
        </ul>
      <% elsif item.canceled? %>
        <ul class="c-links">
          <li class="c-link--nolink">
            この注文はキャンセルされました。
          </li>
        </ul>
      <% else %>
        <ul class="c-links">
          <%= link_to cancel_orders_path(detail.payment.number, item_id: item.id), data:{ method: "delete", confirm: "本当に商品をキャンセルしますか？" } do%>
            <li class="c-link">
              商品をキャンセル
            </li>
          <% end %>
        </ul>
      <% end %>
    </div>
  <% end %>
<% end %>
