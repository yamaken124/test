<div class="p-wrapper--have_padding">
  <%= form_for @order, url: cart_path, html: { id: 'update-cart' } do |order_form| %>
    <h2 class="title">カート小計(<%=@order.single_order_detail.item_count%>個の商品): <span><%=number_to_jpy(@order.single_order_detail.item_total * @tax_rate)%></span></h2>
    <% if @order.single_order_detail.item_count > 0 %>
      <%= order_form.submit "レジに進む", name: 'checkout', class: 'c-btn--submit c-btn--submit--single', :onclick=> "prevent_double_submit(event)" %>
    <% else %>
      <ul class="c-links">
        <%= link_to products_path do%>
          <li class="c-link">商品一覧を見る</li>
        <% end %>
      </ul>
    <% end %>
    <div class="p-wrapper--have_padding">
    <% if false #TODO %>
      <div class="c-payment_method_section">
        購入形式: <%= t('order_type.single_order') %>
      </div>
    <% end %>
      <%= render partial: 'single_line_item', collection: order_form.object.single_line_items, locals: { order_form: order_form } %>
      <% # TODO 定期購買 %>
    </div>
  <% end %>
</div>
