<div class="c-product_list">
  <div class="c-product_list__image">
    <%= image_tag item.variant.top_image %>
  </div>
  <div class="c-product__list_detail_wrapper">
    <div class="c-product_list__title">
      <%= item.variant.name %>
    </div>
    <div class="c-product_list__price">
      <%= number_to_jpy(item.variant.price.amount) %>
      (<%=item.quantity%>)
    </div>
  </div>
</div>
<div class="c-links_wrapper">
  <% if item.instance_of?(SingleLineItem) && @returned_item_indexed_by_item_id.present? && @returned_item_indexed_by_item_id[item.id].present? %>
    <ul class="c-links">
      <li class="c-link--nolink">
        返品リクエストを受け付けました。
      </li>
    </ul>
  <% elsif shipment.try(:shipped?) %>
    <ul class="c-links">
      <a href="#">
        <li class="c-link--small_text--nolink">
          <span>発送を完了しました<br>発送日:<%=shipment.shipped_at.to_date%></span>
        </li>
      </a>
      <% if item.can_send_back? %>
        <a href="<%= orders_item_send_back_confirmation_path(item.id) %>">
          <li class="c-link">
            商品を返品
          </li>
        </a>
      <% end %>
    </ul>
  <% elsif (item.instance_of?(SingleLineItem) && item.canceled?) || (item.instance_of?(OneClickItem) && payment.canceled?) %>
    <ul class="c-links">
      <li class="c-link--nolink">
        この注文はキャンセルされました。
      </li>
    </ul>
  <% elsif (item.shipment.exported? if item.shipment.present?) %>
    <ul class="c-links">
      <li class="c-link--nolink">
        発送準備中です。
      </li>
    </ul>
  <% elsif item.can_canceled? %>
    <ul class="c-links">
      <% if item.instance_of?(SingleLineItem) %>
        <%= link_to cancel_orders_path(detail.payment.number, item_id: item.id), class: "c-btn--single_click", id: (detail.payment.number+item.variant_id.to_s), data:{ method: "patch" }, :onclick=> "prevent_double_submit_from_link_to(id, event)" do%>
          <li class="c-link">
            商品をキャンセル
          </li>
        <% end %>
      <% elsif item.instance_of?(OneClickItem) %>
        <%= link_to one_click_cancel_orders_path(payment.number), class: "c-btn--single_click", id: (payment.number+item.variant_id.to_s), data:{ method: "patch" }, :onclick=> "prevent_double_submit_from_link_to(id, event)" do%>
           <li class="c-link">
            商品をキャンセル
          </li>
        <% end %>
      <% end %>
    </ul>
  <% else %>
    <ul class="c-links">
      <li class="c-link--nolink">
        ご注文を承りました。
      </li>
    </ul>
  <% end %>
</div>