<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :id => "form" }) do |f| %>
  <h2>Sign in</h2>
  <div class="form__field">
    <%= f.label :email %>
    <%= f.email_field :email, :autofocus => true, class: "form__text--long" %>
  </div>
  <div class="form__field">
    <%= f.label :password %>
    <%= f.password_field :password, class: "form__text--long" %>
  </div>
  <% if devise_mapping.rememberable? -%>
    <div class="form__field">
      <%= f.check_box :remember_me %> <%= f.label :remember_me %>
    </div>
  <% end -%>
  <div class="form__field">
    <%= f.submit "Sign in", class: "c-btn c-btn__submit" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
