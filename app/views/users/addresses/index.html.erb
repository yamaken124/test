<div class="p-wrapper--have_padding">
  <h2 class="title">お届け先住所編集</h2>
  <% if @addresses.size < Address::UpperLimit %>
    <%= link_to new_account_address_path do %>
     <div class="c-btn--submit u-margin__bottom_middle">
       新しく住所を登録する
      </div>
    <% end %>
  <% else %>
    <p class="u-base_font_color"><%= t('validate_registration.address') %></p>
  <% end %>
  <h2 class="c-links__title">登録済み住所</h2>
  <ul class="c-links">
    <% @addresses.each do |address| %>
      <a href="<%= edit_account_address_path(address) %>">
        <li class="c-link--small_text">
        <span>
          <%= address.last_name %>&nbsp;<%= address.first_name %>
          <% if address.is_main %>
            <%="（#{t('address.is_main')}）"%>
          <% end %>
          <br>
          <%= address.zipcode %>&nbsp;<%= address.city %>&nbsp;<%= address.address %><br>
        </span>
        </li>
      </a>
    <% end %>
  </ul>
</div>
