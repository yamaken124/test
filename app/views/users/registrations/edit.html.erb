<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, id: "form" }) do |f| %>
  <h2>ユーザー登録</h2>
  <%= devise_error_messages! %>
  <div class="form__field">
    <%= f.label :last_name, "姓" %>
    <%= f.text_field :last_name, autofocus: true, class: "form__text--long", placeholder: "姓" %>
  </div>
  <div class="form__field">
    <%= f.label :first_name, "名" %>
    <%= f.text_field :first_name, class: "form__text--long", placeholder: "名" %>
  </div>
  <div class="form__field">
    <%= f.label :zip_code, "郵便番号" %>
    <%= f.text_field :zip_code, class: "form__text--long", placeholder: "郵便番号" %>
  </div>
  <div class="form__field">
    <%= f.label :address, "住所" %>
    <%= f.text_field :address, class: "form__text--long", placeholder: "住所" %>
  </div>
  <div class="form__field">
    <%= f.label :telephone %>
    <%= f.text_field :telephone, class: "form__text--long", placeholder: "電話番号" %>
  </div>
  <div class="form__field">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, class: "form__text--long", placeholder: "xxxxx@finc.co.jp" %>
  </div>
  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>
  <div class="form__field">
    <%= f.label :password %> <i>(変更時のみ記入)</i>
    <%= f.password_field :password, class: "form__text--long", autocomplete: "off" %>
  </div>
  <div class="form__field">
    <%= f.label :password_confirmation %><i>(同上)</i>
    <%= f.password_field :password_confirmation, class: "form__text--long", autocomplete: "off" %>
  </div>
  <div class="form__field">
    <%= f.label :current_password, "現在のパスワード" %> <i>必須</i><br />
    <%= f.password_field :current_password, class: "form__text--long", autocomplete: "off" %>
  </div>
  <div class="form__field">
    <%= f.submit "Update", class: "c-btn c-btn__submit" %>
  </div>
<% end %>

<div id="form">
  <h2>FiNCSTOREを退会する</h2>
  <div class="form__field">
    <%= button_to "アカウントを削除", registration_path(resource_name), data: { confirm: "本当に退会しますか？退会した場合すべての履歴が削除されます。" }, method: :delete, class: "c-btn c-btn__submit" %>
  </div>
</div>
