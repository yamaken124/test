<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { id: "form" }) do |f| %>
  <h2>ユーザー登録</h2>
  <% if false %>
  <div class="form__field">
    <%= f.label :last_name, "姓" %>
    <%= f.text_field :last_name, autofocus: true, class: "form__text--long", placeholder: "姓" %>
  </div>
  <div class="form__field">
    <%= f.label :first_name, "名" %>
    <%= f.text_field :first_name, class: "form__text--long", placeholder: "名" %>
  </div>
  <div class="form__field">
    <%= f.label :zip_code, "郵便番号" %>
    <%= f.text_field :zip_code, class: "form__text--long", placeholder: "郵便番号" %>
  </div>
  <div class="form__field">
    <%= f.label :address, "住所" %>
    <%= f.text_field :address, class: "form__text--long", placeholder: "住所" %>
  </div>
  <div class="form__field">
    <%= f.label :telephone %>
    <%= f.text_field :telephone, class: "form__text--long", placeholder: "電話番号" %>
  </div>
  <% end %>
  <div class="form__field">
    <%= f.label :email %>
    <%= f.email_field :email, class: "form__text--long", placeholder: "xxxx@finc.co.jp" %>
  </div>
  <div class="form__field">
    <%= f.label :password %>
    <%= f.password_field :password, class: "form__text--long" %>
  </div>
  <div class="form__field">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, class: "form__text--long" %>
  </div>
  <div class="form__field">
    <%= f.submit "登録する", class: "c-btn--submit" %>
  </div>
<% end %>
