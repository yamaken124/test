<div id="header">
  <div id="header__left_wrapper">
    <% unless request.path_info.include?("sign_in") %>
      <%= image_tag "users/category.png", id: "header__pull_down", onclick: "show_category(this)" %>
    <% end %>
  </div>
  <div id="header__center_wrapper">
    <%= link_to root_path do %>
      <%= image_tag "users/header_logo.png", id: "header__logo" %>
    <% end %>
  </div>
  <div id="header__right_wrapper">
    <%= link_to cart_path do %>
      <div id="header__cart">
        <div id="header__cart_number">
          <%= @order.try(:single_order_detail).try(:item_count) || 0 %>
        </div>
      </div>
    <% end %>
  </div>
</div>